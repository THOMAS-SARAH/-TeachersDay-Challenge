import java.util.Scanner;
 
public class NextRound {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        int n = sc.nextInt();  // Number of participants
        int k = sc.nextInt();  // The k-th place position
        
        int[] scores = new int[n];
        for (int i = 0; i < n; i++) {
            scores[i] = sc.nextInt();
        }
        
        int kthScore = scores[k - 1];  // Score of the k-th place contestant
        
        int count = 0;
        // Count how many participants have score >= kthScore and positive
        for (int score : scores) {
            if (score >= kthScore && score > 0) {
                count++;
            } else {
                // Since sequence is non-increasing, no need to check further
                break;
            }
        }
        
        System.out.println(count);
        sc.close();
    }
}
