import java.util.Scanner;

public class QueueAtSchool {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        int n = sc.nextInt(); // number of children
        int t = sc.nextInt(); // number of seconds
        String s = sc.next(); // initial arrangement
        
        char[] queue = s.toCharArray();
        
        // Simulate the process for t seconds
        for (int time = 0; time < t; time++) {
            for (int i = 0; i < n - 1; i++) {
                // Check if we have 'B' followed by 'G'
                if (queue[i] == 'B' && queue[i + 1] == 'G') {
                    // Swap them
                    queue[i] = 'G';
                    queue[i + 1] = 'B';
                    // Skip next index to avoid double-swapping
                    i++;
                }
            }
        }
        
        // Convert char array back to string
        System.out.println(new String(queue));
        
        sc.close();
    }
}

