import java.util.Scanner;

public class TeamProblem {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt(); // Number of problems
        int count = 0; // Number of problems friends will implement

        for (int i = 0; i < n; i++) {
            int petya = scanner.nextInt();
            int vasya = scanner.nextInt();
            int tonya = scanner.nextInt();

            // If at least two of them are sure (sum >= 2)
            if (petya + vasya + tonya >= 2) {
                count++;
            }
        }

        System.out.println(count);
        scanner.close();
    }
}
