import java.util.*;

public class Twins {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt();
        int[] coins = new int[n];

        int totalSum = 0;
        for (int i = 0; i < n; i++) {
            coins[i] = sc.nextInt();
            totalSum += coins[i];
        }

        // Sort in descending order
        Arrays.sort(coins);
        int halfSum = 0;
        int coinCount = 0;

        for (int i = n - 1; i >= 0; i--) {
            halfSum += coins[i];
            coinCount++;
            if (halfSum > (totalSum - halfSum)) {
                break;
            }
        }

        System.out.println(coinCount);
    }
}
